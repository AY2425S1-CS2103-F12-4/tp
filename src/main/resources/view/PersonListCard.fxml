<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <!-- Column for Person Details -->
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" /> <!-- Second column for Attendances -->
    </columnConstraints>

    <!-- Left column with Person Details -->
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>
      <HBox spacing="0.5" alignment="CENTER_LEFT">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" text="\$first" styleClass="cell_big_label" />
      </HBox>
      <FlowPane fx:id="tags" />
      <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" />
      <Label fx:id="email" styleClass="cell_small_label" text="\$email" />
      <Label fx:id="sex" styleClass="cell_small_label" text="\$sex" />
      <Label fx:id="address" styleClass="cell_small_label" text="\$address" />
      <Label fx:id="studentClass" styleClass="cell_small_label" text="\$class" />
      <Label fx:id="registerNumber" styleClass="cell_small_label" text="\$register number" />
      <Label fx:id="ecName" styleClass="cell_small_label" text="\$emergency contact name" />
      <Label fx:id="ecNumber" styleClass="cell_small_label" text="\$emergency contact number" />
    </VBox>

    <!-- Right column with Attendances -->
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="1">
      <padding>
        <Insets top="5" right="15" bottom="5" left="5" />
      </padding>
      <Label text="Attendances" styleClass="cell_big_label" />
      <FlowPane fx:id="attendances" />
    </VBox>
  </GridPane>
</HBox>